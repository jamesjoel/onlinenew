<%
    var totalPages = Math.ceil(totalRecord/recordPerPage);


%>
<%= //currentPage %>



<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-4">
            <h2 class="text-center">Pagination</h2>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                  <li class="page-item <% if(currentPage==1) {%><%= 'disabled' %><% } %>"><a class="page-link" href="/<%= currentPage - 1 %>">Previous</a></li>

                    <% 
                        if(currentPage != 1)
                        {
                            var x = currentPage - 1;
                            var y = x*recordPerPage;
                            
                        }
                        else
                        {
                            var y=0;
                        }
                    for(var i=1; i<=totalPages; i++){ %>
                        <li class="page-item <% if(currentPage == i) { %><%= 'active' %><% } %>"><a class="page-link" href="/<%= i %>"><%= i %></a></li>

                    <% } %>





                  <li class="page-item <% if(currentPage == totalPages) { %><%= 'disabled' %><% } %>"><a class="page-link" href="/<%= parseInt(currentPage) +1 %>">Next</a></li>
                </ul>
              </nav>

            <table class="table table-dark table-hover table-stripped table-bordered">
                <tr>
                    <th>S.No.</th>
                    <th>Country Name</th>
                    <th>Phone Number Code</th>
                </tr>
                <% result.forEach(function(country, i){ %>
                <tr>
                    <td><%= y+1 %></td>
                    <td><%= country.country_name %></td>
                    <td><%= country.country_phone_code %></td>
                </tr>
                <% 
                y++;
            }) %>


            </table>
        </div>
    </div>
</div>
</body>
</html>